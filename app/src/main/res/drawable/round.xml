<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền -->
    <solid android:color="#20000000" /> <!-- Đen với độ trong suốt 50% -->
    <!-- Góc bo tròn -->
    <corners android:radius="12dp"/>

    <!-- Bóng đổ -->
    <layer-list>
        <item>
            <shape>
                <corners android:radius="12dp"/>
                <solid android:color="#E6FFFFFF"/>
                <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp"/>
            </shape>
        </item>
        <item>
            <shape>
                <corners android:radius="12dp"/>
                <solid android:color="#F5EBE3E3"/>
                <padding
                    android:left="8dp"
                    android:top="8dp"
                    android:right="8dp"
                    android:bottom="8dp"/>
            </shape>
        </item>
    </layer-list>
</shape>
